<% layout('layouts/boilerplate')%>
<div id="cluster-map" ></div>

<h2 class="display-6 text-center mb-4">Search and View Our Houses</h2>

<form action="/results/?" class="d-flex mb-5">
    <input class="form-control me-2" type="search" placeholder="Search Your House ...." name="search_query" aria-label="Search">
    <button class="btn btn-outline-dark" type="submit">Search</button>
  </form>

<!-- <h1>All Houses</h1> -->

<% for (let house of houses){%>
<div class="card mb-3" >
    <div class="row">
        <div class="col-md-4">
            <%if(house.images.length) {%>
                <img class="img-fluid" alt="" src="<%=house.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= house.title %> </h5>
              
                <p class="card-text"><%= house.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= house.location%></small>
                </p>
                <a class="btn btn-primary" href="/houses/<%=house._id%>">View <%=house.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>

</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const houses = { features: <%- JSON.stringify(houses) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>